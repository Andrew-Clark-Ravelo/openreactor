:80, :443 {
    root * /srv
    file_server browse

    handle_path /gauge/* {
        reverse_proxy gauge
    }
    handle_path /turbo/* {
        reverse_proxy turbo
    }
    handle_path /mfc/* {
        reverse_proxy mfc
    }
    handle_path /hv/* {
        reverse_proxy hv
    }
    handle_path /counter/* {
        reverse_proxy counter
    }
    handle_path /alert/* {
        reverse_proxy alert
    }
}
